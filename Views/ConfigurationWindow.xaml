<Window x:Class="DigitalHandwriting.Views.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalHandwriting.Views"
        xmlns:viewmodels="clr-namespace:DigitalHandwriting.ViewModels"
        mc:Ignorable="d"
        Title="Application Configuration"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Validation Authentication Methods:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding AllValidationMethods}" SelectionMode="Multiple">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <TextBlock Grid.Row="2" Text="Default Authentication Method:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox Grid.Row="3"
                  ItemsSource="{Binding AvailableDefaultMethods}"
                  SelectedItem="{Binding SelectedDefaultAuthenticationMethod, Mode=TwoWay}"
                  Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Registration Passphrase Inputs (Number of times user types passphrase):" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox Grid.Row="5" Text="{Binding RegistrationPassphraseInputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Command="{Binding SaveConfigurationCommand}" Width="75" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="75" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
